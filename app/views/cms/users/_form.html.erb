<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :uid %></dt>
  <dd><%= f.text_field :uid %></dd>

  <dt><%= @model.t :email %></dt>
  <dd><%= f.email_field :email %></dd>

  <dt><%= @model.t :in_password %></dt>
  <dd><%= f.password_field :in_password %></dd>

  <dt><%= @model.t :type %></dt>
  <dd><%= f.select :type, @model.type_options %></dd>

  <dt><%= @model.t :group_ids %></dt>
  <dd>
    <%= hidden_field_tag "item[group_ids][]" %>
    <% Cms::Group.site(@cur_site).order_by(name: 1).each do |item| %>
    <label><%= f.check_box "group_ids[]", {}, item._id %><%= item.name %></label><br />
    <% end %>
  </dd>
</dl>
