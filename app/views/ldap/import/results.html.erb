<% if @item.results.present? %>
<dl class="see">
  <dt><%= t "ldap.views.import/sync.header" %></dt>
  <dd></dd>
  <dt><%= t "ldap.views.import/sync.group" %></dt>
  <dd></dd>
  <dt><%= t "ldap.views.import/sync.success" %></dt>
  <dd><%= @item.results["group"]["successed"] %></dd>
  <dt><%= t "ldap.views.import/sync.delete" %></dt>
  <dd><%= @item.results["group"]["deleted"] %></dd>
  <dt><%= t "ldap.views.import/sync.fail" %></dt>
  <dd><%= @item.results["group"]["failed"] %></dd>
  <% if @item.results["group"]["errors"].present? %>
  <dt><%= t "ldap.views.import/sync.error" %></dt>
  <dd><%= br @item.results["group"]["errors"].join("\n")%></dd>
  <% end %>
  <% if @item.results["group"]["warnings"].present? %>
  <dt><%= t "ldap.views.import/sync.warning" %></dt>
  <dd><%= br @item.results["group"]["warnings"].join("\n")%></dd>
  <% end %>
  <dt><%= t "ldap.views.import/sync.user" %></dt>
  <dd></dd>
  <dt><%= t "ldap.views.import/sync.success" %></dt>
  <dd><%= @item.results["user"]["successed"] %></dd>
  <dt><%= t "ldap.views.import/sync.delete" %></dt>
  <dd><%= @item.results["user"]["deleted"] %></dd>
  <dt><%= t "ldap.views.import/sync.fail" %></dt>
  <dd><%= @item.results["user"]["failed"] %></dd>
  <% if @item.results["user"]["errors"].present? %>
  <dt><%= t "ldap.views.import/sync.error" %></dt>
  <dd><%= br @item.results["user"]["errors"].join("\n")%></dd>
  <% end %>
  <% if @item.results["user"]["warnings"].present? %>
  <dt><%= t "ldap.views.import/sync.warning" %></dt>
  <dd><%= br @item.results["user"]["warnings"].join("\n")%></dd>
  <% end %>
</dl>
<% end %>
