<div id="sns-mypage">

  <table class="index sites">
    <thead>
      <tr>
        <th><h1><%= t :"cms.site" %></h1></th>
      </tr>
    </thead>
    <tbody>
      <% @sites.each do |item| %>
      <tr>
        <td>
          <div class="name"><%= link_to item.name, cms_contents_path(site: item.host) %></div>
          <div class="url"><%= link_to item.full_url, item.full_url, target: :_blank %></div>
          <nav class="tap-menu">
            <%= link_to :"cms.content", "/.#{item.host}" %>
            <%= link_to :"cms.view_site", item.full_url, target: :_blank %>
          </nav>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
