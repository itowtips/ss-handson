<%= form_for :item, url: { action: :show }, html: { method: :delete, multipart: true } do |f| %>
<%= error_messages_for :item %>

<div class="addon-view" id="addon-basic">
<%= render file: "_delete" %>
</div>

<footer class="send">
<%= f.submit t("views.button.delete"), class: :delete %>
<%= f.button t("views.button.cancel"), type: :reset, onclick: "location.href='#{url_for(action: :show, filename: @item.filename, do: "show")}'; return false;" %>
</footer>
<% end %>
